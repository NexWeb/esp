/*
    test.me - MakeMe file for ESP
 */

Me.load({
    targets: {
        test: {
            action: `run('testme --depth ' + me.settings.depth)`,
            platforms: [ 'local' ],
        },
        'clean-test': {
            type: 'clean',                                                                                 
            action: `
                run('testme --clean')
                for each (dir in Path().files('**/cache')) {
                    trace('Clean', dir)
                    dir.removeAll()
                }
                for each (file in Path().files('**/*.log')) {
                    trace('Clean', file)
                    file.remove()
                }
            `
        },  
    },
})
