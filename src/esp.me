/*
    esp.me -- MakeMe for Embedded Server Pages
 */

Me.load({
    targets: {
        'esp.h': {
            type: 'header',
            headers: [ '*.h' ],
        },

        libmod_esp: {
            type: 'lib',
            depends: [ 'libappweb', 'sqlite' ],
            sources: [ '*.c' ],
            headers: [ '*.h' ],
            exclude: /esp\.c/,
        },

        espcmd: {
            pname: 'esp',
            path: '${BIN}/esp${EXE}',
            type: 'exe',
            depends: [ 'libappweb', 'sqlite', 'libmod_esp' ],
            sources: [ 'esp.c' ]
            platforms: [ 'local' ],
            postblend: function (target) {
                if (target.static && me.targets.ssl.enable) {
                    target.depends += ['libmprssl']
                }
            },
        },

        'esp.conf': {
            type: 'file',
            files: [ 'esp.conf' ],
        }
    }
})
