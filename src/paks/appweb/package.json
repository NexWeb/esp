{
    "name": "appweb",
    "description": "Embedthis Appweb Embedded Web Server",
    "title": "Embedthis Appweb",
    "version": "5.0.0-rc0",
    "keywords": [
        "appweb",
        "http",
        "webserver"
    ],
    "homepage": "http://embedthis.com/products/appweb/embedded-web-server.html",
    "author": {
        "name": "Embedthis Software",
        "email": "dev@embedthis.com",
        "url": "http://embedthis.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/embedthis/appweb-4.git"
    },
    "bugs": {
        "email": "dev@embedthis.com",
        "url": "http://github.com/embedthis/appweb-4/issues"
    },
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        },
        {
            "type": "Commercial",
            "url": "http://embedthis.com/licensing/"
        }
    ],
    "dirs": {
        "paks": "src/paks",
        "client": "client"
    },
    "dependencies": {
        "http": "~5.0",
        "me-dev": "~0.8",
        "me-doc": "~0.8",
        "me-package": "~0.8",
        "mpr": "~5.0",
        "osdep": "~0.8",
        "pcre": "~1.0"
    },
    "optionalDependencies": {
        "angular": "~1.2",
        "ejs": "~2.3",
        "esp": "~0.9",
        "esp-angular": "*",
        "esp-angular-mvc": "*",
        "esp-html-mvc": "*",
        "esp-legacy-mvc": "*",
        "esp-server": "*",
        "est": "~0.6",
        "sqlite": "~1.0",
        "zlib": "~1.0"
    },
    "esp": {
        "serverPrefix": "/do",
        "combined": false,
        "update": true,
        "server": {
            "generate": {
                "appweb": "esp-server/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "files": [
                    "esp-server/src/app.c"
                ],
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-legacy-mvc/list.esp",
                "clientEdit": "esp-legacy-mvc/edit.esp"
            }
        },
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2
        },
        "json": true,
        "auth": "app"
    },
    "client-scripts": [
        "src/paks/angular/angular.js",
        "src/paks/angular/angular-animate.js",
        "src/paks/angular/angular-route.js",
        "paks/angular/angular.js",
        "paks/angular/angular-animate.js",
        "paks/angular/angular-route.js",
        "src/paks/esp-angular/*.js",
        "app/main.js",
        "app/*/**.js*"
    ],
    "paks": {
        "esp-angular": {
            "noexport": true
        },
        "esp-angular-mvc": {
            "noexport": true
        },
        "esp-html-mvc": {
            "noexport": true
        },
        "esp-legacy-mvc": {
            "noexport": true
        },
        "esp-server": {
            "noexport": true
        }
    }
}
